# Daily Planner Delight - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==========================================
# Rork Configuration
# ==========================================
EXPO_PUBLIC_RORK_API_BASE_URL=https://your-api-url.com

# ==========================================
# Firebase Configuration
# ==========================================
# Get these values from Firebase Console > Project Settings > General
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789012:ios:abcdef1234567890
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# iOS-specific Firebase config
EXPO_PUBLIC_FIREBASE_IOS_CLIENT_ID=123456789012-abcdefghijklmnop.apps.googleusercontent.com
EXPO_PUBLIC_FIREBASE_IOS_BUNDLE_ID=app.rork.daily-planner-delight

# ==========================================
# RevenueCat Configuration
# ==========================================
# Get your API key from RevenueCat Dashboard > API Keys
EXPO_PUBLIC_REVENUECAT_IOS_API_KEY=your-revenuecat-ios-api-key

# Optional: App-specific entitlement IDs (configure in RevenueCat)
EXPO_PUBLIC_REVENUECAT_PRO_ENTITLEMENT=pro
EXPO_PUBLIC_REVENUECAT_LIFETIME_ENTITLEMENT=lifetime

# ==========================================
# Groq AI Configuration
# ==========================================
# Get your API key from https://console.groq.com/keys
EXPO_PUBLIC_GROQ_API_KEY=your-groq-api-key

# ==========================================
# App Configuration
# ==========================================
EXPO_PUBLIC_APP_ENVIRONMENT=development # development | staging | production
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASHLYTICS=true

# ==========================================
# Deep Linking
# ==========================================
EXPO_PUBLIC_APP_SCHEME=dailyplannerdelight
EXPO_PUBLIC_UNIVERSAL_LINK_DOMAIN=dailyplannerdelight.app

# ==========================================
# Support & Legal
# ==========================================
EXPO_PUBLIC_SUPPORT_EMAIL=support@dailyplannerdelight.app
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://dailyplannerdelight.app/privacy
EXPO_PUBLIC_TERMS_URL=https://dailyplannerdelight.app/terms
